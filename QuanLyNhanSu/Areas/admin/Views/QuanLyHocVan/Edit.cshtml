@model QuanLyNhanSu.Models.TrinhDoHocVan

@{
    ViewBag.Title = "Cập nhật Trình Độ Học Vấn";
}

<h2>Cập nhật Trình Độ Học Vấn</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-group">
        <label>Mã Trình Độ</label>
        @Html.TextBoxFor(model => model.MaTrinhDoHocVan, new { @class = "form-control", @readonly = "readonly"})
        <input hidden name="id" value="@Model.MaTrinhDoHocVan" type="text"/>
    </div>

    <div class="form-group">
        <label>Tên Trình Độ</label>
        @Html.TextBoxFor(model => model.TenTrinhDo, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.TenTrinhDo)
    </div>

    <div class="form-group">
        <label>Hệ Số Bậc</label>
        @Html.TextBoxFor(model => model.HeSoBac, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.HeSoBac)
    </div>

    <button type="submit" class="btn btn-primary">Cập nhật</button>
}
