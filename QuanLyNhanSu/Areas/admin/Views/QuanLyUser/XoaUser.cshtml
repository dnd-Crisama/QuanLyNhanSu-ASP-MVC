@model QuanLyNhanSu.Models.NhanVien

@{
    ViewBag.Title = "Xác nhận xóa nhân viên";
    Layout = "~/Areas/admin/Views/Shared/_Layout.cshtml";
}

<h2>Xóa nhân viên</h2>

<div class="alert alert-danger">
    <h4>Bạn có chắc chắn muốn đuổi nhân viên này không?</h4>
    <h5>Mọi thông tin liên quan đến @Model.HoTen đều bị xóa bỏ.</h5>
</div>

<div class="form-horizontal">
    <h4>Chi tiết nhân viên:</h4>
    <hr />

    <dl class="dl-horizontal">
        <dt>Mã nhân viên:</dt>
        <dd>@Model.MaNhanVien</dd>

        <dt>Tên nhân viên:</dt>
        <dd>@Model.HoTen</dd>

        <dt>Giới tính:</dt>
        <dd>@Model.GioiTinh</dd>

        <dt>Ngày sinh:</dt>
        <dd>@Model.NgaySinh.ToString()</dd>

        <dt>Địa chỉ:</dt>
        <dd>@Model.QueQuan</dd>

        <dt>Số điện thoại:</dt>
        <dd>@Model.sdt_NhanVien</dd>

        <dt>Email:</dt>
        <dd>@Model.Email</dd>
    </dl>
</div>
@using (Html.BeginForm("XoaUser", "QuanLyUser", FormMethod.Post))
{
    @Html.HiddenFor(model => model.MaNhanVien)
    @Html.AntiForgeryToken()

    <div class="form-actions">
        <div>
            <label for="lydo">Lý do thôi việc:</label>
            <textarea name="lydo" id="lydo" required class="form-control" style="width: 100%; height: 100px;"></textarea>
        </div>
        <input type="text" hidden value="@Model.MaNhanVien" name="id"/>
        <input type="submit" value="Xác nhận xóa" class="btn btn-danger" />
        @Html.ActionLink("Hủy bỏ", "Index", null, new { @class = "btn btn-default" })
        <a href="@Url.Action("NgungHoatDong", "QuanLyUser", new { id = Model.MaNhanVien })" class="btn btn-warning" title="Nhân viên sẽ không đi vào hoạt động nhân vẫn giữ thông tin">Ngưng hoạt động</a>
    </div>
}