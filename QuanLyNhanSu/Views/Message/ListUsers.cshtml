@using QuanLyNhanSu.Models
@{
    ViewBag.Title = "ListUsers";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model List<NhanVien>
@{
    ViewBag.Title = "Select a User to Chat";
}

<h2>Select a User to Chat</h2>
<ul>
    @foreach (var user in Model)
    {
        <li>
            <a href="@Url.Action("ListConversation", "Message", new { receiverId = user.MaNhanVien })">
                @user.HoTen
            </a>
        </li>
    }
</ul>