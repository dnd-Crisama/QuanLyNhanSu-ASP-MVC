@using QuanLyNhanSu.Models
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model List<Notification>
@{
    ViewBag.Title = "Notifications";
    bool isAdmin;
    if ((string)Session["MaNhanVien"] == "admin")
    {
        isAdmin = true;
    }
    else
    {
        isAdmin = false;
    }

}

<h2 class="notification-header">Notifications</h2>
<div class="notification-container">
    <ul class="notification-list">
        @foreach (var notification in Model)
        {
            <li class="notification-item">
                <span class="notification-content">@notification.Content</span>
                <span class="notification-time">@notification.SentAt</span>
            </li>
        }
    </ul>
</div>

@if (isAdmin == true)
{
    using (Html.BeginForm("SendNotification", "Notification", FormMethod.Post))
    {
        <div class="notification-form">
            <textarea class="notification-textarea" name="content" placeholder="Write notification"></textarea>
            <input type="text" hidden name="sender" value="@Session["MaNhanVien"]"/>
            <button class="notification-button" type="submit">Send to All</button>
        </div>
    }
}
<style>
    .notification-header {
        font-size: 24px;
        font-weight: bold;
        margin-bottom: 20px;
        text-align: center;
        color: #4a4a4a;
    }

    .notification-container {
        background: #f9f9f9;
        border-radius: 8px;
        padding: 20px;
        box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
    }

    .notification-list {
        list-style: none;
        padding: 0;
        margin: 0;
    }

    .notification-item {
        background: #ffffff;
        padding: 15px;
        margin-bottom: 10px;
        border: 1px solid #ddd;
        border-radius: 5px;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .notification-content {
        color: #333;
        font-size: 16px;
    }

    .notification-time {
        color: #777;
        font-size: 14px;
    }

    .notification-form {
        margin-top: 20px;
        text-align: center;
    }

    .notification-textarea {
        width: 100%;
        height: 80px;
        padding: 10px;
        margin-bottom: 10px;
        border-radius: 5px;
        border: 1px solid #ddd;
        resize: vertical;
        font-size: 14px;
        box-shadow: inset 0px 2px 4px rgba(0, 0, 0, 0.1);
    }

    .notification-button {
        background: #007bff;
        color: #fff;
        padding: 10px 20px;
        border: none;
        border-radius: 5px;
        font-size: 16px;
        cursor: pointer;
        transition: background 0.3s ease;
    }

        .notification-button:hover {
            background: #0056b3;
        }

</style>