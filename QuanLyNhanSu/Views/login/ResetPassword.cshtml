@{
    ViewBag.Title = "Đặt lại mật khẩu";
}
@model QuanLyNhanSu.Models.NhanVien
<link rel="preconnect" href="https://fonts.gstatic.com">
<link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@100;200;300;400;500;600;700;800;900&display=swap" rel="stylesheet">
<link rel="stylesheet" href="~/Content/css/login.css">
<div class="anime-grill-center">
</div>
<div class="anime-grill-offcenter"></div>
<div class="text-lines">
    @*<div class="line-1">Welcome to </div>*@
    <div class="line-2">Quản lý nhân sự</div>
    <div class="line-3">LOGIN</div>
</div>
<div class="site-body">
    <form method="post" action="" role="form">
        <div class="login">
            <div class="form">
                <h1>Đặt lại mật khẩu</h1>
                <input type="password" name="newPassword" placeholder="Mật khẩu mới" required />
                <input type="password" name="confirmPassword" placeholder="Nhập lại mật khẩu mới" required />
                <input type="submit" class="submit" value="Reset"/>
                <span class="text-danger">@ViewBag.Error</span>
                <span class="text-success">@ViewBag.Message</span>
            </div>
        </div>
    </form>
    <div class="lines">
        <div class="line"></div>
        <div class="line"></div>
        <div class="line"></div>
        <div class="line"></div>
        <div class="line"></div>
        <div class="line"></div>
        <div class="line"></div>
        <div class="line"></div>
        <div class="line"></div>
        <div class="line"></div>
        <div class="line"></div>
        <div class="line"></div>
        <div class="line"></div>
        <div class="line"></div>
        <div class="line"></div>
        <div class="line"></div>
        <div class="line"></div>
        <div class="line"></div>
        <div class="line"></div>
    </div>
</div>
@section FooterPartial{
    @Html.Action("FooterPartial")
}
